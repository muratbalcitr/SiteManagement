<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.balancetech.sitemanagement.ui.auth.LoginFragment"
        android:label="Giriş"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.balancetech.sitemanagement.ui.auth.RegisterFragment"
        android:label="Kayıt Ol"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.balancetech.sitemanagement.ui.dashboard.DashboardFragment"
        android:label="Ana Sayfa"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_feesFragment"
            app:destination="@id/feesFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_waterMeterFragment"
            app:destination="@id/waterMeterFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_paymentsFragment"
            app:destination="@id/paymentsFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_extraPaymentsFragment"
            app:destination="@id/extraPaymentsFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_usersFragment"
            app:destination="@id/usersFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_userDetailFragment"
            app:destination="@id/userDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/feesFragment"
        android:name="com.balancetech.sitemanagement.ui.fees.FeesFragment"
        android:label="Aidatlar"
        tools:layout="@layout/fragment_fees" />

    <fragment
        android:id="@+id/waterMeterFragment"
        android:name="com.balancetech.sitemanagement.ui.watermeter.WaterMeterFragment"
        android:label="Su Sayaç"
        tools:layout="@layout/fragment_water_meter">
        <action
            android:id="@+id/action_waterMeterFragment_to_waterMeterDetailFragment"
            app:destination="@id/waterMeterDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/waterMeterDetailFragment"
        android:name="com.balancetech.sitemanagement.ui.watermeter.WaterMeterDetailFragment"
        android:label="Su Sayacı Detayı"
        tools:layout="@layout/fragment_water_meter_detail">
        <argument
            android:name="water_meter_id"
            app:argType="string" />
        <argument
            android:name="unit_id"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/paymentsFragment"
        android:name="com.balancetech.sitemanagement.ui.payments.PaymentsFragment"
        android:label="Ödemeler"
        tools:layout="@layout/fragment_payments" />

    <fragment
        android:id="@+id/extraPaymentsFragment"
        android:name="com.balancetech.sitemanagement.ui.extrapayments.ExtraPaymentsFragment"
        android:label="Ek Ödemeler"
        tools:layout="@layout/fragment_extra_payments" />

    <fragment
        android:id="@+id/usersFragment"
        android:name="com.balancetech.sitemanagement.ui.users.UsersFragment"
        android:label="Daire Sakinleri"
        tools:layout="@layout/fragment_users">
        <action
            android:id="@+id/action_usersFragment_to_userDetailFragment"
            app:destination="@id/userDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/userDetailFragment"
        android:name="com.balancetech.sitemanagement.ui.users.UserDetailFragment"
        android:label="Daire Sakini Detayı"
        tools:layout="@layout/fragment_user_detail">
        <argument
            android:name="user_id"
            app:argType="string" />
    </fragment>

</navigation>
